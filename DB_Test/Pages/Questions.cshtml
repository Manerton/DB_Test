@page
@model DB_Test.Pages.QuestionsModel
@{
    ViewData["title"] = "Вопросы";
}
<div class="container">
    <div class="d-flex d-flex align-items-end" style="justify-content: space-between;">
         <h3>Список вопросов</h3>
         <div>
            <button class="btn btn-success btn-lg" type="submit" onclick="openCreateQuestionsWithParam()">Добавить вопрос</button>
        </div>
    </div>

    @foreach (var questions in Model.Questions)
    {
        <div class="d-flex align-items-center p-2 my-3 text-black-100 board rounded box-shadow" style="justify-content: space-between;">
           
                <h6 class="mb-0" style="  white-space: nowrap;
                                                     overflow: hidden;
                                                        text-overflow: ellipsis;
                                                            width: 50%;
                ">@questions.TextQuestions</h6>
                <h6 class="mb-0 mx-2" style="white-space: nowrap;">Баллы: @questions.Score</h6>
           
            <div style="display: flex;">
                 <form method="post" asp-action="DeleteQuestion" asp-controller="Questions"> 
                    <input name="QuestionId" value="@questions.Id" type="hidden">
                    <button class="btn btn-danger mx-1">Удалить</button>
                </form>
            </div>
        </div>
    }

</div>

<script>
    function openCreateQuestionsWithParam(idQ) {
        var queryString = "?idQ=" + idQ
        window.location.href = "/QuestionsWork" + queryString; 
    }
</script>